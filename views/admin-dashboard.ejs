<!-- views/admin-dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hostess Dashboard | Edelweiss Evenimente</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@500..700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="navigation d-flex column-gap-3">
                    <div class="nav-item text-center">
                        <a class="nav-link" href="">
                            <span>Lista evenimente</span>
                        </a>
                    </div>
                    <div class="nav-item text-center">
                        <a class="nav-link" href="">
                            <span>Logout</span>
                            <img src="https://assets.edelweiss-evenimente.ro/hostess/logout.svg" width="16" height="16" alt="" style="margin-top: -2px;" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="dashboard-container container-fluid">
        <div class="row">
            <div class="col">
                <div class="dashboard-item">
                    <h2 class="fw-bold">Eveniment nou</h2>
                    <div>
                        <form action="/create-event" method="post" enctype="multipart/form-data">
                            <label class="col-12" for="event-name">Nume eveniment</label>
                            <input class="col-12" type="text" id="event-name" name="eventName" required>
                            <label class="col-12" for="event-date">Data eveniment</label>
                            <input class="col-12" type="date" id="event-date" name="eventDate"
                                value="<%= currentDate %>" required>
                            <label class="col-12" for="json-filename">Cod eveniment</label>
                            <input class="col-12" type="text" id="json-filename" name="jsonFilename" readonly>
                            <label class="col-12" for="event-file">Incarca lista invitati (Excel)</label>
                            <input class="col-12" type="file" id="event-file" name="eventFile" accept=".xlsx" required>
                            <button class="primary-button col-12" type="submit">Adauga eveniment</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="dashboard-item">
                    <h2 class="fw-bold">Lista evenimente</h2>
                    <div>
                        <table>
                            <thead class="">
                                <tr class="">
                                    <th class="">Nume</th>
                                    <th class="">Data</th>
                                    <th class="">Status</th>
                                    <th class="">Locatie</th>
                                    <th class="">Pret</th>
                                    <th class="">Nr</th>
                                    <th class=""></th>

                                </tr>
                            </thead>
                            <tbody>
                                <% events.forEach(event=> { %>
                                    <tr>
                                        <!-- <td>
                                            <%= event.fileName %>
                                        </td> -->
                                        <td>
                                            <%= event.eventName %>
                                        </td>
                                        <td>
                                            <%= event.eventDate %>
                                        </td>
                                        <td>
                                            <span class="status-event">In asteptare</span>
                                        </td>
                                        <td>
                                            Pleiada
                                        </td>
                                        <td>
                                            200 LEI
                                        </td>
                                        <td>2</td>
                                        <td>
                                            <a href="/edit-event/<%= event.fileName %>">
                                                <img class="event-actions"
                                                    src="https://assets.edelweiss-evenimente.ro/hostess/more_vert.svg"
                                                    width="20" height="20" alt="" />
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
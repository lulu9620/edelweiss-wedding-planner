<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@500..700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autentificare Hostess | Edelweiss Evenimente</title>
    <descrption></descrption>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/login.css">
    <meta name="robots" content="noindex,nofollow">
</head>
<body>
    <div class="hostess-edw-login-wrapper">
        <div class="container ">
            <div class="row hostess-edw-login-container align-items-md-center">
                <div class="col-12 col-lg-6 text-center">
                    <div class="edw_logo_hostess_container">
                        <img src="https://assets.edelweiss-evenimente.ro/hostess/edw_logo_hostess.png" width="400" height="400" alt="" />
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="login-container">
                        <form action="/login" method="post">
                            <label class="col-12 color-main-text" for="username">Nume utilizator</label>
                            <input class="col-12" type="text" id="username" name="username" placeholder="Introduceti numele de utilizator...." required>
                            <label class="color-main-text" for="password">Parola</label>
                            <input class="col-12" type="password" id="password" name="password" required>
                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                            <% } %>
                            <button class="col-12 primary-button fw-bold" type="submit" id="login-btn">Autentificare</button>
                        </form>
                        <form action="/hostess-login" method="get" class="text-center">
                            <button class="color-main-text link-button" type="submit">Autentificare Hostess</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>